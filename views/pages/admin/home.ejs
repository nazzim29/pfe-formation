            </div>

            <!--Divider-->
            <hr class="border-b-2 border-gray-600 my-8 mx-4">

            <div class="flex flex-row flex-wrap flex-grow mt-2">

                <div class="w-full md:w-1/2 p-3">
                    <!--Graph Card-->
                    <div class="bg-gray-400 border border-gray-800 rounded shadow">
                        <div class="border-b border-gray-800 p-3">
                            <h5 class="font-bold uppercase text-white">Formation et Seminaire cette ann√©e</h5>
                        </div>
                        <div class="p-5">
                            <canvas id="chartjs-7" class="chartjs" width="undefined" height="undefined"></canvas>
                            <script>
                                Chart.defaults.color = "#ffffff";
                                let month = [
                                    {
                                        name: 'janvier',
                                        valueformation: 0,
                                        valueseminaire: 0,
                                    },
                                    {
                                        name: 'fevrier',
                                        valueformation: 0,
                                        valueseminaire: 0,
                                    },
                                    {
                                        name: 'mars',
                                        valueformation: 0,
                                        valueseminaire: 0,
                                    },
                                    {
                                        name: 'avril',
                                        valueformation: 0,
                                        valueseminaire: 0,
                                    },
                                    {
                                        name: 'mai',
                                        valueformation: 0,
                                        valueseminaire: 0,
                                    },
                                    {
                                        name: 'juin',
                                        valueformation: 0,
                                        valueseminaire: 0,
                                    },
                                    {
                                        name: 'juillet',
                                        valueformation: 0,
                                        valueseminaire: 0,
                                    },
                                    {
                                        name: 'aout',
                                        valueformation: 0,
                                        valueseminaire: 0,
                                    },
                                    {
                                        name: 'septembre',
                                        valueformation: 0,
                                        valueseminaire: 0,
                                    },
                                    {
                                        name: 'octobre',
                                        valueformation: 0,
                                        valueseminaire: 0,
                                    },
                                    {
                                        name: 'novembre',
                                        valueformation: 0,
                                        valueseminaire: 0,
                                    },
                                    {
                                        name: 'decembre',
                                        valueformation: 0,
                                        valueseminaire: 0,
                                    },
                                ]
                                let eventChart = new Chart(document.getElementById("chartjs-7"), {
                                    "type": "bar",
                                    data: {
                                        "labels": month.map(e => e.name),
                                        color: "white"
                                    },
                                    "options": {
                                        "responsive": true,
                                        "scales": {
                                            "yAxes": [{
                                                "ticks": {
                                                    "beginAtZero": true,
                                                    "color": "white"
                                                }
                                            }]
                                        }
                                    }
                                });
                                let xhr = new XMLHttpRequest()
                                xhr.open('get', '/formation?json=true')
                                xhr.responseType = 'json'
                                xhr.onload = () => {
                                    console.log('chart1')
                                    xhr.response.forEach(formation => {
                                        if(new Date(formation.date_debut).getFullYear() == new Date().getFullYear())
                                            month[new Date(formation.date_debut).getMonth()].valueformation++
                                    });
                                    eventChart.data.datasets.push({
                                        label: 'formation',
                                        data:month.map(e=>e.valueformation),
                                        backgroundColor:"#2c5eaa",
                                    })
                                    eventChart.update()

                                }
                                xhr.send()
                                let xhr1 = new XMLHttpRequest()
                                xhr1.open('get','/seminaire?json=true')
                                xhr1.responseType = 'json'
                                xhr1.onload = ()=>{
                                    console.log('chart1')
                                    xhr1.response.forEach(seminaire => {
                                        if (new Date(seminaire.date_debut).getFullYear() == new Date().getFullYear())
                                        month[new Date(seminaire.date_debut).getMonth()].valueseminaire++
                                    });
                                    eventChart.data.datasets.push({
                                        label: 'seminaire',
                                        data: month.map(e => e.valueseminaire),
                                        backgroundColor: "#20b471",
                                    })
                                    eventChart.update()
                                }
                                xhr1.send()
                            </script>
                        </div>
                    </div>
                    <!--/Graph Card-->
                </div>

                <div class="w-full md:w-1/2 p-3">
                    <!--Graph Card-->
                    <div class="bg-gray-400 border border-gray-800 rounded shadow">
                        <div class="border-b border-gray-800 p-3">
                            <h5 class="font-bold uppercase text-white">les Cours les plus visit√©</h5>
                        </div>
                        <div class="p-5">
                            <ul>
                                <% for( let index = 0; index < 5; index++ ) { %>
                                    <li class="flex justify-between"><a class="font-semibold" href="/cours/<%=topcours[index].id%>"><%=topcours[index].titre%></a> <span class="text-atblue-dark"><%=topcours[index].views%></span></li>
                                    <% if (index == topcours.length-1) break %>
                                <% } %>
                            </ul>
                            <p class="py-2"><a href="/cours" class="text-white">Plus de cours en ligne...</a></p>
                        </div>
                    </div>
                    <!--/Graph Card-->
                </div>
