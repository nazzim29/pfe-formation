<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Partenaire</title>
    <link rel="stylesheet" href="\public/css/iconfont/material-icons.css">
    <link rel="stylesheet" href="\public/css/style.css">
    <link rel="icon" type="image/svg+xml" sizes="16x16" href="\public/image/ATHEAD.png">
</head>

<body class="h-screen overflow-hidden flex flex-row items-center justify-center bg-atblue-light">
    <%- include('../navbar',{partenaire:true}) %>
        <div class="flex w-full flex-col h-full overflow-hidden justify-center items-center">
            <div
                class="bg-white p-5 rounded-md shadow-2xl flex flex-wrap w-10/12 h-5/6 m-2 overflow-y-auto items-center justify-center">
                <% partenaires.forEach(p=> { %>
                    <div class="partenaire-card">
                        <img class="object-cover flex-1 h-full w-full" src="<%- p.logo %> " alt="logo">
                        <div class="card-content">
                            <h1 class="title"><%- p.nom %> <span><%- p.type %></span></h1>
                            <p class="description"><%- p.description%></p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
</body>

</html>